<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="p_unit"
		transaction-type="RESOURCE_LOCAL">
		<description>Persistence unit for the JPA tutorial of the Hibernate Getting Started Guide</description>
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.org.entity.Facture</class>
		<class>com.org.entity.Person</class>
		<class>com.org.entity.Users</class>
	</persistence-unit>
</persistence>